<xform>
	<declare prefix="article">
		<column name="title" caption="标题" mode="string" empty="false" maxLength="255" editor="text" />
		<column name="subtitle" caption="副标题" mode="string" empty="true" maxLength="255" editor="text" />
		<column name="author" caption="作者" mode="string" empty="false" maxLength="100" editor="text" />
		<column name="summary" caption="摘要" mode="string" maxLength="1000" editor="textarea" />
		<column name="keyword" caption="关键字" mode="string" empty="false" maxLength="255" editor="text" />
		<column name="issueDate" caption="发布日期" mode="date" pattern="yyyy-MM-dd" empty="true" maxLength="10" editor="text" />
		<column name="overdueDate" caption="过期日期" mode="date" pattern="yyyy-MM-dd" empty="true" maxLength="10" editor="text" />
	</declare>
	<layout>
		<TR>
			<TD width="50">
				<label binding="title" name="标题"/>
			</TD>
			<TD>
				<input binding="title" name="标题" style="width:80%"/>
			</TD>
			<TD width="50">
				<label binding="subtitle" name="副标题"/>
			</TD>
			<TD>
				<input binding="subtitle" name="副标题" style="width:80%"/>
			</TD>
		</TR>
		<TR>
			<TD width="50">
				<label binding="author" name="作者"/>
			</TD>
			<TD>
				<input binding="author" name="作者"/>
			</TD>
			<TD width="50">
				<label binding="issueDate" name="发布日期"/>
			</TD>
			<TD>
				<input binding="issueDate" name="发布日期"/>
			</TD>
		</TR>
		<TR>
			<TD width="50">
				<label binding="keyword" name="关键字"/>
			</TD>
			<TD>
				<input binding="keyword" name="关键字" style="width:80%"/>
			</TD>
			<TD width="50">
				<label binding="overdueDate" name="过期时间"/>
			</TD>
			<TD>
				<input binding="overdueDate" name="过期时间"/>
			</TD>
		</TR>
		<TR>
			<TD width="50">
				<label binding="summary" name="摘要"/>
			</TD>
			<TD colspan="3">
				<input binding="summary" name="摘要" style="width:80%;height:50"/>
			</TD>
		</TR>
	</layout>
</xform>