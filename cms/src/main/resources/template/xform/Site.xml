<?xml version="1.0" encoding="UTF-8"?>
<xform>
	<declare>
		<column name="name" caption="名称" mode="string" empty="false"/>	
		<column name="overdueDate" caption="过期时间" mode="string" editor="comboedit" editorvalue="0|1|2|3|4|5" editortext="永不过期|半年|一个季度|一个月|一个星期|一天"/>
		<column name="path" caption="发布路径" mode="string" empty="false"/>
		<column name="docPath" caption="附件路径" mode="string"/>
		<column name="imagePath" caption="图片路径" mode="string"/>	
		<column name="remark" caption="站点描述" mode="string" maxLength="255"/>
	</declare>
	<layout>
		<TR>
			<TD width="50"><label binding="name"/></TD>
			<TD colspan="3"><input binding="name"/></TD>
			<TD width="50"><label binding="overdueDate"/></TD>
			<TD><input binding="overdueDate"/></TD>
		</TR>
		<TR>
			<TD><label binding="path"/></TD>
			<TD><input binding="path"/></TD>
			<TD><label binding="imagePath"/></TD>
			<TD><input binding="imagePath"/></TD>
			<TD><label binding="docPath"/></TD>
			<TD><input binding="docPath"/></TD>
		</TR>
		<TR>
			<TD><label binding="remark"/></TD>
			<TD colspan="5">
				<textarea binding="remark" style="width:100%;height:100px;"/>
			</TD>
		</TR>
	</layout>			
</xform>