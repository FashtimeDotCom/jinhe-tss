<?xml version="1.0" encoding="UTF-8"?>
<xform>
	<declare prefix="param">	
		<column caption="id" name="id" mode="string" display="none"/>
		<column name="name" caption="参数名称" mode="string" maxLength="100" empty="true"/>
		<column name="code" caption="参数Code" mode="string" maxLength="100" empty="true"/>
		<column name="value" caption="参数值" mode="string" maxLength="2000" empty="true"/>
		<column name="description" caption="描述" mode="string" maxLength="500"/>
	</declare>
	<layout>
		<TR>
			<TD width="100"><label binding="name"/></TD>
			<TD><input binding="name" type="text" style="width:50%;"/></TD>
		</TR>
		<TR>
			<TD width="100"><label binding="code"/></TD>
			<TD><input binding="code" type="text" style="width:50%;"/></TD>
		</TR>
		<TR>
			<TD width="100"><label binding="value"/></TD>
			<TD><textarea binding="value" style="width:100%;height:60px"/></TD>
		</TR>
		<TR>
			<TD width="100" valign="top"><label binding="description"/></TD>
			<TD><textarea binding="description" style="width:100%;height:100px"/></TD>
		</TR>
	</layout>
	<data>
	</data>
</xform>