<?xml version="1.0" encoding="UTF-8"?>
<xform>
	<declare prefix="group">
		<column name="name" caption="名称" mode="string" empty="false" maxLength="50" editor="text"/>
		<column name="description" caption="描述" mode="string" empty="true" maxLength="255" editor="textarea"/>
	</declare>
	<layout>
		<TR>
			<TD width="100"><label binding="name"/></TD>
			<TD><input binding="name"/></TD>
		</TR>
		<TR>
			<TD width="100"><label binding="description"/></TD>
			<TD><textarea binding="description" style="width:400;height:100"/><br/>注：最多255字 </TD>
		</TR>
	</layout>
</xform>