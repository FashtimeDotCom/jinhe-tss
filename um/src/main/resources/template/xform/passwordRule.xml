<?xml version="1.0" encoding="UTF-8"?>
<xform>
	<declare prefix="rule">
		<column name="name" caption="名称" mode="string" empty="false"/>
		<column name="leastLength" caption="最短长度" mode="string" inputReg="/^\d{0,2}$/" empty="false"/>
		<column name="canEq2LoginName" caption="是否允许与用户名相同" mode="boolean"/>
		<column name="leastStrength" caption="最低强度" mode="string" inputReg="/^\d{0,2}$/" empty="false"/>
		<column name="lowStrength" caption="低强度" mode="string" inputReg="/^\d{0,2}$/" empty="false"/>
		<column name="higherStrength" caption="高强度" mode="string" inputReg="/^\d{0,2}$/" empty="false"/>
		<column name="impermissible" caption="不允许使用的密码" mode="string" editor="textarea"/>
	</declare>
	<layout>
		<TR>
			<TD width="50"><label binding="name"/></TD>
			<TD><input binding="name" type="text"/></TD>
		</TR>
		<TR>
			<TD width="50"><label binding="leastLength"/></TD>
			<TD><input binding="leastLength" type="text"/></TD>
		</TR>
		<TR>
			<TD width="50"><label binding="leastStrength"/></TD>
			<TD><input binding="leastStrength" type="text"/></TD>
		</TR>
		<TR>
			<TD width="50"><label binding="lowStrength"/></TD>
			<TD><input binding="lowStrength" type="text"/></TD>
		</TR>
		<TR>
			<TD width="50"><label binding="higherStrength"/></TD>
			<TD><input binding="higherStrength" type="text"/></TD>
		</TR>
		<TR>
			<TD width="50" valign="top"><label binding="impermissible"/></TD>
			<TD><input binding="impermissible" style="width:100%;height:100"/></TD>
		</TR>
		<TR>
			<TD width="50">&amp;nbsp;</TD>
			<TD><input binding="canEq2LoginName" type="text"/><label binding="canEq2LoginName"/></TD>
		</TR>
	</layout>
	<data>
	</data>
</xform>
