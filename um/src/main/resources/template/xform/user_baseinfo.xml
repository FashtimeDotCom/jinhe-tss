<?xml version="1.0" encoding="UTF-8"?>
<xform>
	<declare prefix="user">
		<column name="id" mode="hidden"/>
		<column name="userName"  caption="姓名" mode="string" empty="false" maxLength="20"/>
		<column name="loginName" caption="账号" mode="string" empty="false" maxLength="20" editable="false"/>
		<column name="password"  caption="密码" mode="string" empty="false" maxLength="20" editable="false" inputReg="/^[\u0000-\u00FF]*$/"/>
		<column name="passwordQuestion" caption="提示问题" mode="string" empty="false" maxLength="100"/>
		<column name="passwordAnswer"   caption="提示答案" mode="string" empty="false" maxLength="100"/>
		<column name="sex" caption="性别" mode="string" editor="comboedit" editorvalue="1|0" editortext="男|女"/>
		<column name="birthday" caption="出生年月" mode="string" pattern="yyyy-MM-dd" maxLength="32"/>
		<column name="employeeNo" caption="员工编号" mode="string" maxLength="100"/>
		<column name="mail" caption="电子邮件" mode="string" maxLength="100" inputReg="/^[\w\-]*@?[\w\-]*(\.[\w\-]*){0,2}$/"/>
		<column name="telephone" caption="电话" mode="string" maxLength="30"/>
		<column name="address"   caption="地址" mode="string" maxLength="100"/>
		<column name="postalCode" caption="邮编" mode="string" maxLength="10" inputReg="/^\d{0,10}$/"/>
		
		<column name="certificateCategory" caption="证件种类" mode="string" editor="comboedit" editorvalue="1|2" editortext="工作证|身份证"/>
		<column name="certificateNumber" caption="证件号" mode="string" maxLength="50"/>
		<column name="accountUsefulLife" caption="账户有效期" mode="string" pattern="yyyy-MM-dd"/>
		<column name="authenticateMethod" caption="认证方式" mode="string" empty="false" editor="comboedit"
			editorvalue="com.jinhe.tss.um.sso.UMPasswordIdentifier" editortext="UM本地"/>
		
		<column name="groupId" mode="hidden"/>
		<column name="groupName" mode="hidden"/>
		<column name="disabled"  mode="hidden" />
	</declare>
	<layout>
		<TR>
			<TD width="50"><label binding="loginName"/></TD>
			<TD><input binding="loginName"/></TD>
			
			<TD width="50"><label binding="userName"/></TD>
			<TD><input binding="userName"/></TD>
		</TR>
		<TR>
			<TD width="50"><label binding="birthday"/></TD>
			<TD><input binding="birthday"/></TD>
			
			<TD width="50"><label binding="sex"/></TD>
			<TD><input binding="sex"/></TD>
		</TR>
		<TR>
			<TD width="50"><label binding="employeeNo"/></TD>
			<TD><input binding="employeeNo"/></TD>
			
			<TD width="50"><label binding="telephone"/></TD>
			<TD><input binding="telephone"/></TD>
		</TR>
		<TR>
			<TD width="50"><label binding="mail"/></TD>
			<TD><input binding="mail" style="width:250;"/></TD>

			<TD width="50"><label binding="address"/></TD>
			<TD><input binding="address" style="width:250;"/></TD>
		</TR>
		<TR>
			<TD width="50"><label binding="password"/></TD>
			<TD><input binding="password" type="password"/></TD>
			
			<TD width="50"><label binding="authenticateMethod"/></TD>
			<TD><input binding="authenticateMethod"/></TD>
		</TR>
		<TR>
			<TD width="50"><label binding="passwordQuestion"/></TD>
			<TD><input binding="passwordQuestion" style="width:250;"/></TD>

			<TD width="50"><label binding="passwordAnswer"/></TD>
			<TD><input binding="passwordAnswer" style="width:250;"/></TD>
		</TR>
	</layout>
</xform>