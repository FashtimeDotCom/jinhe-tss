<?xml version="1.0" encoding="UTF-8"?>

<strategies> 
  <strategy code="connectionpool" name="数据库连接池"> 
    <poolClass>com.jinhe.tss.cache.extension.ReusablePool</poolClass>  
    <poolSize>10</poolSize>  
    <cyclelife>21600000</cyclelife>  
    <interruptTime>1000</interruptTime>  
    <initNum>5</initNum>  
    <customizerClass>com.jinhe.tss.framework.persistence.connpool.ConnPoolCustomizer</customizerClass>  
  </strategy>  
  
  <!-- Demo pools -->
  <strategy code="connpool-wms-mysql" name="DB连接池-WMS-清洗库"> 
    <poolClass>com.jinhe.tss.cache.extension.ReusablePool</poolClass>  
    <poolSize>10</poolSize>  
    <cyclelife>21600000</cyclelife>  
    <interruptTime>1000</interruptTime>  
    <initNum>0</initNum>  
    <customizerClass>com.jinhe.tss.framework.persistence.connpool.ConnPoolCustomizer</customizerClass>  
	<paramFile>database/mysql-wms.properties</paramFile>
  </strategy>
  <strategy code="connectionpool-0" name="DB连接池-WMS生产库"> 
    <poolClass>com.jinhe.tss.cache.extension.ReusablePool</poolClass>  
    <poolSize>10</poolSize>  
    <cyclelife>1800000</cyclelife>  
    <interruptTime>1000</interruptTime>  
    <initNum>0</initNum>  
    <customizerClass>com.jinhe.tss.framework.persistence.connpool.ConnPoolCustomizer</customizerClass>  
	<paramFile>database/oracle-wms-prod.properties</paramFile>
  </strategy>
  <strategy code="connectionpool-1" name="DB连接池-WMS只读库"> 
    <poolClass>com.jinhe.tss.cache.extension.ReusablePool</poolClass>  
    <poolSize>50</poolSize>  
    <cyclelife>3600000</cyclelife>  
    <interruptTime>3000</interruptTime>  
    <initNum>0</initNum>  
    <customizerClass>com.jinhe.tss.framework.persistence.connpool.ConnPoolCustomizer</customizerClass>  
	<paramFile>database/oracle-wms-adg.properties</paramFile>
  </strategy>
  <strategy code="connpool-oms-adg" name="DB连接池-OMS只读库"> 
    <poolClass>com.jinhe.tss.cache.extension.ReusablePool</poolClass>  
    <poolSize>10</poolSize>  
    <cyclelife>3600000</cyclelife>  
    <interruptTime>3000</interruptTime>  
    <initNum>0</initNum>  
    <customizerClass>com.jinhe.tss.framework.persistence.connpool.ConnPoolCustomizer</customizerClass>  
	<paramFile>database/oracle-oms-adg.properties</paramFile>
  </strategy>
  
  <strategy code="connpool-vf-oracle" name="DB连接池-VF只读库"> 
    <poolClass>com.jinhe.tss.cache.extension.ReusablePool</poolClass>  
    <poolSize>10</poolSize>  
    <cyclelife>43200000</cyclelife>  
    <interruptTime>1000</interruptTime>  
    <initNum>0</initNum>  
    <customizerClass>com.jinhe.tss.framework.persistence.connpool.ConnPoolCustomizer</customizerClass>  
	<paramFile>database/oracle-vf.properties</paramFile>
  </strategy>
  <strategy code="connpool-wfb-oracle" name="DB连接池-狼堡库"> 
    <poolClass>com.jinhe.tss.cache.extension.ReusablePool</poolClass>  
    <poolSize>10</poolSize>  
    <cyclelife>43200000</cyclelife>  
    <interruptTime>1000</interruptTime>  
    <initNum>0</initNum>  
    <customizerClass>com.jinhe.tss.framework.persistence.connpool.ConnPoolCustomizer</customizerClass>  
	<paramFile>database/oracle-wfb.properties</paramFile>
  </strategy>
  <strategy code="connpool-bsd-oracle" name="DB连接池-波塞冬"> 
    <poolClass>com.jinhe.tss.cache.extension.ReusablePool</poolClass>  
    <poolSize>10</poolSize>  
    <cyclelife>43200000</cyclelife>  
    <interruptTime>1000</interruptTime>  
    <initNum>0</initNum>  
    <customizerClass>com.jinhe.tss.framework.persistence.connpool.ConnPoolCustomizer</customizerClass>  
	<paramFile>database/oracle-bsd.properties</paramFile>
  </strategy>
  
  
  <strategy code="taskpool" name="日志输出任务池"> 
    <poolClass>com.jinhe.tss.cache.extension.ReusablePool</poolClass>  
    <poolContainerClass>com.jinhe.tss.cache.extension.MapContainer</poolContainerClass>    
    <poolSize>1000</poolSize>  
    <cyclelife>0</cyclelife>  
    <interruptTime>100</interruptTime>  
    <initNum>100</initNum>  
    <customizerClass>com.jinhe.tss.framework.component.log.LogOutputTaskPoolCustomizer</customizerClass>  
    <accessMethod>3</accessMethod>  
  </strategy>  
  <strategy code="threadpool" name="线程池"> 
    <poolClass>com.jinhe.tss.cache.extension.threadpool.ThreadPool</poolClass>  
	<poolContainerClass>com.jinhe.tss.cache.extension.MapContainer</poolContainerClass>  
    <cyclelife>0</cyclelife>  
    <interruptTime>1000</interruptTime>  
	<poolSize>10</poolSize>  
    <initNum>5</initNum>  
    <customizerClass>com.jinhe.tss.cache.extension.threadpool.ThreadPoolCustomizer</customizerClass>  
  </strategy>  
  
  <strategy code="SHORTER" name="服务数据缓存（1分钟）"> 
    <poolClass>com.jinhe.tss.cache.ObjectPool</poolClass>  
    <poolSize>1000</poolSize>  
    <cyclelife>60000</cyclelife>  
    <accessMethod>5</accessMethod>  
  </strategy>
  <strategy code="SHORT" name="服务数据缓存（3分钟）"> 
    <poolClass>com.jinhe.tss.cache.ObjectPool</poolClass>  
    <poolSize>1000</poolSize>  
    <cyclelife>180000</cyclelife>  
    <accessMethod>5</accessMethod>  
  </strategy>
  <strategy code="LONG" name="服务数据缓存（一天）"> 
    <poolClass>com.jinhe.tss.cache.ObjectPool</poolClass>  
    <poolSize>300</poolSize>  
    <cyclelife>43200000</cyclelife>  
    <accessMethod>5</accessMethod>  
  </strategy>  
  <strategy code="NODEAD" name="服务数据缓存（不死）"> 
    <poolClass>com.jinhe.tss.cache.ObjectPool</poolClass>  
    <poolSize>1000</poolSize>  
    <cyclelife>0</cyclelife>  
    <accessMethod>5</accessMethod>  
  </strategy>
  
</strategies>
